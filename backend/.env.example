
PORT=3000
NODE_ENV=development

# CORS Configuration
# For development, you can use '*' to allow all origins
# For production, specify exact origins separated by commas
# Example: CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/e-commerce?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# For production, you might want to use Redis connection URL
# REDIS_URL=redis://username:password@hostname:port
# Service Configuration

SERVICE_NAME=api-service

# Logging
LOG_LEVEL=info

RATE_LIMIT_MAX=100
TRUSTED_IPS=127.0.0.1,::1

# JWT Configuration
# Generate secure random strings for production
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# MFA JWT Configuration
# Separate secret for MFA tokens for additional security
JWT_MFA_SECRET=your_jwt_mfa_secret_here_change_in_production
JWT_MFA_EXPIRES_IN=10m

STREAM_API_KEY=
STREAM_API_SECRET=